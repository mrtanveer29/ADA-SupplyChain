<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    cardview:elevation="4dp"
    cardview:cardUseCompatPadding="true">
<LinearLayout
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/itemClickForChallan">
    <ImageView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight=".53"
        android:scaleType="fitXY"
        android:src="@drawable/status_not_recieved"
        android:id="@+id/txtDeliveryStatus"/>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_marginLeft="5dp"
        android:layout_height="wrap_content"
        android:layout_weight="3.5"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textSize="16sp"
            android:textStyle="bold"
            android:text="Delivery Code"
            android:textColor="@color/list_head_text"
            android:id="@+id/txtDeliveryCode"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textSize="16sp"
            android:text="Delivery Date 25-Feb-2017"
            android:textColor="@color/list_detail_text"
            android:id="@+id/textDeliveryDate"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textSize="16sp"
            android:text="Requisition No"
            android:textColor="@color/list_detail_text"
            android:id="@+id/txtRequisitionCode" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textSize="16sp"
            android:text="Requisition Date"
            android:textColor="@color/list_detail_text"
            android:id="@+id/txtRequistionDate"/>


    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1.5"
        android:paddingBottom="5dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textSize="16sp"
            android:gravity="center"
            android:textStyle="bold"
            android:text="2000 Tk"
            android:textColor="@color/list_head_text"
            android:id="@+id/txtTotalAmount"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textSize="16sp"
            android:gravity="center"
            android:text="Recieve"
            android:background="#37B24F"
            android:textColor="#fff"
            android:id="@+id/btnReceived"/>
    </LinearLayout>
</LinearLayout>
</android.support.v7.widget.CardView>