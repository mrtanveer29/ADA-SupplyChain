<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    cardview:elevation="4dp"
    cardview:cardUseCompatPadding="true">

    <LinearLayout
        android:orientation="horizontal" android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".83"
            android:scaleType="fitXY"
            android:src="@drawable/icon_not_approved_sample_2"
            android:id="@+id/imgSalesApprovestatus"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_marginLeft="5dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:textSize="16sp"
                android:textStyle="bold"
                android:text="Requisition Code"
                android:textColor="@color/list_head_text"
                android:id="@+id/txtRequisitionCode"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:textSize="14sp"
                android:text="Party Name"
                android:textColor="@color/list_detail_text"
                android:id="@+id/txtPartyName"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:textSize="14sp"
                android:text="25-Feb-2017"
                android:textColor="@color/list_detail_text"
                android:id="@+id/txtRequistionDate"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:textSize="14sp"
                android:text="Finance Approve Status"
                android:textColor="@color/list_detail_text"
                android:id="@+id/txtFinanceApprove"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="1.5dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:paddingBottom="5dp"
            android:background="@drawable/border_bottom"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.3"
                android:textSize="16sp"
                android:gravity="top"
                android:textStyle="normal"
                android:text="200000.0 Tk"
                android:textColor="@color/colourAdaTheme"
                android:id="@+id/txtTotalAmount"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/btnEdit"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:src="@drawable/icon_edit" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:src="@drawable/icon_delete"
                    android:id="@+id/btnRequistionDelete"
                    style="@style/btnStyle1"
                    />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>