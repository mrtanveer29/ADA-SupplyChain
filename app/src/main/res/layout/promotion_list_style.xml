<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardBackgroundColor="#fff"
    card_view:cardElevation="3dp"
    card_view:cardUseCompatPadding="true">
    <LinearLayout
        android:id="@+id/promotionListContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/promotionHeadingText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#90CAF9"
            android:padding="5dp"
            android:textSize="@dimen/list_heading"
            android:textStyle="normal"
            android:textColor="#3d3b3b"
            android:text="Promotion heading"/>
        <TextView
            android:id="@+id/promotionDetailsText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/list_details"
            android:textColor="@color/list_detail_text"
            android:padding="5dp"
            android:text="@string/demo_detail"/>
    </LinearLayout>

</android.support.v7.widget.CardView>
