<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    cardview:elevation="4dp"
    cardview:cardUseCompatPadding="true">
    <LinearLayout
        android:orientation="horizontal" android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_marginLeft="5dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:textSize="16sp"
                android:textStyle="bold"
                android:text="Payment Method"
                android:textColor="@color/list_head_text"
                android:id="@+id/txtPaymentMethod"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:textSize="14sp"
                android:text="Party Name"
                android:textColor="@color/list_detail_text"
                android:id="@+id/txtPartyName"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:textSize="14sp"
                android:text="25-Feb-2017"
                android:textColor="@color/list_detail_text"
                android:id="@+id/txtDepositeDate"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.5"
                android:layout_marginLeft="-5dp"
                android:scaleType="fitStart"
                android:src="@drawable/icon_approved_horizontal"
                android:id="@+id/imgAccountsApprovestatus"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="1.5dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:paddingBottom="5dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:textSize="16sp"
                android:gravity="center"
                android:textStyle="normal"
                android:text="2000 Tk"
                android:textColor="@color/colourAdaTheme"
                android:id="@+id/txtTotalAmount"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:layout_weight=".6">

                <ImageView
                    android:id="@+id/btnEdit"
                    style="@style/btnStyle1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:src="@drawable/icon_edit"
                    android:textSize="16sp" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:src="@drawable/icon_delete"
                    android:id="@+id/btnRequistionDelete"
                    style="@style/btnStyle1"
                    />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>